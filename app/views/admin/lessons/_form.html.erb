<%= form_with(model: [@course_module, @lesson]) do |form| %>
  <% if @lesson.errors.any? %>
    <div style="color: red">
      <h2><%= t('admin.lessons.form.errors_count', count: @lesson.errors.count) %></h2>
      <ul>
        <% @lesson.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, t('admin.lessons.form.title') %><br>
    <%= form.text_field :title, style: "width: 400px" %>
  </div>

  <div>
    <%= form.label :description, t('admin.lessons.form.description') %><br>
    <%= form.text_area :description, rows: 4, style: "width: 400px" %>
  </div>

  <div>
    <%= form.label :video_url, t('admin.lessons.form.video_url') %><br>
    <%= form.text_field :video_url, style: "width: 400px" %>
  </div>

  <div>
    <%= form.label :attachment_url, t('admin.lessons.form.attachment_url') %><br>
    <%= form.text_field :attachment_url, style: "width: 400px" %>
  </div>

  <div>
    <%= form.label :order_index, t('admin.lessons.form.order_index') %><br>
    <%= form.number_field :order_index %>
  </div>

  <br>
  <div>
    <%= form.submit t('admin.lessons.form.submit') %>
  </div>
<% end %>
