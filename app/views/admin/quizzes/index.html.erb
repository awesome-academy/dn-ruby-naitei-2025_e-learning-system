<h1>Quản lý Bài kiểm tra (Quizzes)</h1>

<div class="mb-3">
  <%= link_to "Tạo bài kiểm tra mới", new_admin_quiz_path, class: "btn btn-primary" %>
</div>

<table class="table table-hover">
  <thead class="table-light">
    <tr>
      <th>Tiêu đề Quiz</th>
      <th>Khóa học</th>
      <th>Bài học</th>
      <th>Hành động</th>
    </tr>
  </thead>
  <tbody>
    <% @quizzes.each do :quiz| %>
      <tr>
        <td>
          <strong><%= quiz.title %></strong><br>
          <small><%= truncate(quiz.description, length: 70) %></small>
        </td>
        <td><%= quiz.course.title %></td>
        <td><%= quiz.lesson.title %></td>
        <td>
          <%# Link 'show' này là nơi chúng ta sẽ thêm câu hỏi (Phần 3) %>
          <%= link_to "Quản lý câu hỏi", admin_quiz_path(quiz), class: "btn btn-sm btn-info" %>
          <%= link_to "Sửa", edit_admin_quiz_path(quiz), class: "btn btn-sm btn-warning" %>
          <%= link_to "Xóa", admin_quiz_path(quiz), data: {
                turbo_method: :delete,
                turbo_confirm: "Bạn có chắc muốn xóa bài kiểm tra này?"
              }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
