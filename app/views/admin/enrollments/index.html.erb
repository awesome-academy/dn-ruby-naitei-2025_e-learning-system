<div class="container mt-4">
  <h2 class="mb-4">Quản lý Ghi danh & Thanh toán</h2>

  <ul class="nav nav-tabs mb-3" id="enrollmentTabs" role="tablist">
    <li class="nav-item">
      <button class="nav-link active fw-bold text-warning" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button">
        <i class="bi bi-hourglass-split"></i> Chờ duyệt
        <% if @pending_enrollments.any? %>
          <span class="badge bg-danger rounded-pill"><%= @pending_enrollments.count %></span>
        <% end %>
      </button>
    </li>
    <li class="nav-item">
      <button class="nav-link text-secondary" id="history-tab" data-bs-toggle="tab" data-bs-target="#history" type="button">
        <i class="bi bi-clock-history"></i> Lịch sử
      </button>
    </li>
  </ul>

  <div class="tab-content">

    <div class="tab-pane fade show active" id="pending">
      <% if @pending_enrollments.empty? %>
        <div class="alert alert-success">Hiện không có yêu cầu nào cần duyệt.</div>
      <% else %>
        <div class="table-responsive">
          <table class="table table-hover align-middle border">
            <thead class="table-light">
              <tr>
                <th>Học viên</th>
                <th>Khóa học</th>
                <th>Giá tiền</th>
                <th>Ngày đăng ký</th>
                <th>Hành động</th>
              </tr>
            </thead>
            <tbody>
              <% @pending_enrollments.each do |enrollment| %>
                <tr>
                  <td>
                    <div class="fw-bold"><%= enrollment.user.name %></div>
                    <div class="small text-muted"><%= enrollment.user.email %></div>
                  </td>
                  <td><%= enrollment.course.title %></td>
                  <td class="text-danger fw-bold">
                    <%= number_to_currency(enrollment.course.price, unit: "₫", format: "%n %u", precision: 0) %>
                  </td>
                  <td><%= enrollment.created_at.strftime("%d/%m/%Y %H:%M") %></td>
                  <td>
                    <div class="d-flex gap-2">
                      <%= button_to approve_admin_enrollment_path(enrollment), method: :patch, class: "btn btn-success btn-sm" do %>
                        <i class="bi bi-check-lg"></i> Duyệt
                      <% end %>

                      <%= button_to reject_admin_enrollment_path(enrollment), method: :patch, class: "btn btn-outline-danger btn-sm", data: { confirm: "Chắc chắn từ chối?" } do %>
                        <i class="bi bi-x-lg"></i> Từ chối
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
    </div>

    <div class="tab-pane fade" id="history">
      <table class="table table-sm table-striped text-muted">
        <thead>
          <tr>
            <th>ID</th>
            <th>Học viên</th>
            <th>Khóa học</th>
            <th>Trạng thái</th>
            <th>Cập nhật lúc</th>
          </tr>
        </thead>
        <tbody>
          <% @history_enrollments.each do |enrollment| %>
            <tr>
              <td>#<%= enrollment.id %></td>
              <td><%= enrollment.user.name %></td>
              <td><%= enrollment.course.title %></td>
              <td>
                <% if enrollment.active? %>
                  <span class="badge bg-success">Đã duyệt</span>
                <% else %>
                  <span class="badge bg-secondary">Đã từ chối</span>
                <% end %>
              </td>
              <td><%= enrollment.updated_at.strftime("%d/%m/%Y") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>
