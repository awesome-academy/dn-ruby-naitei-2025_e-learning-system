<%= form_with(model: [:admin, @course, @course_module]) do |form| %>
  <% if @course_module.errors.any? %>
    <div style="color: red">
      <h2>
        <%= t('admin.course_modules.form.errors_title',
               count: @course_module.errors.count) %>
      </h2>
      <ul>
        <% @course_module.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, t('admin.course_modules.form.title') %><br>
    <%= form.text_field :title, style: "width: 400px" %>
  </div>

  <div>
    <%= form.label :description, t('admin.course_modules.form.description') %><br>
    <%= form.text_area :description, rows: 4, style: "width: 400px" %>
  </div>

  <div>
    <%= form.label :order_index, t('admin.course_modules.form.order_index') %><br>
    <%= form.number_field :order_index %>
  </div>

  <br>
  <div>
    <%= form.submit t('admin.course_modules.form.submit') %>
  </div>
<% end %>
