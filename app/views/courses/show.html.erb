<div class="card mb-4 shadow-sm">
  <img src="<%= @course.thumbnail_url.presence || 'https://via.placeholder.com/800x400' %>" class="card-img-top" alt="<%= @course.title %>">

  <div class="card-body">
    <h3><%= @course.title %></h3>
    <p class="text-muted"><%= @course.category&.name || "Chưa phân loại" %></p>
    <p><%= @course.description %></p>

    <% if current_user.admin? %>
      <%= link_to "Chỉnh sửa", edit_course_path(@course), class: "btn btn-warning" %>
      <%= link_to "Xóa", course_path(@course), method: :delete, data: { confirm: "Xóa khóa học này?" }, class: "btn btn-danger" %>
    <% else %>
      <%= link_to "Quay lại danh sách", courses_path, class: "btn btn-outline-secondary" %>
    <% end %>
  </div>
</div>
