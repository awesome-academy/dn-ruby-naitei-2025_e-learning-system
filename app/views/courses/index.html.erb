<h1><%= t('courses.index.title') %></h1>

<div class="row">
  <% @courses.each do |course| %>
    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
      <div class="card h-100 course-card shadow-sm">
        <%= link_to course_path(course), class: "stretched-link text-decoration-none text-dark" do %>
          <img src="<%= course.thumbnail_url.presence || 'https://via.placeholder.com/800x400' %>"
               class="card-img-top course-img"
               alt="<%= course.title %>">
        <% end %>

        <div class="card-body">
          <h5 class="card-title"><%= course.title %></h5>
          <p class="card-text text-muted"><%= course.category&.name || t('courses.index.uncategorized') %></p>
          <p class="card-text"><%= truncate(course.description.to_s, length: 120) %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
