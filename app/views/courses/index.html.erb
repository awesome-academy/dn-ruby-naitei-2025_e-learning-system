<div class="container mt-5">
  <div class="row mb-4 align-items-center">
    <div class="col-md-8">
      <h1 class="fw-bold">Khám phá khóa học</h1>
      <p class="text-muted">Nâng cao kỹ năng của bạn với các khóa học chất lượng.</p>
    </div>
    <div class="col-md-4">
      <form class="d-flex">
        <input class="form-control me-2" type="search" placeholder="Tìm khóa học..." aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Tìm</button>
      </form>
    </div>
  </div>

  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    <% @courses.each do |course| %>
      <div class="col">
        <div class="card h-100 shadow-sm border-0 course-card-hover">
          <div class="position-relative overflow-hidden" style="height: 180px;">
             <%= link_to course_path(course) do %>
              <img src="<%= course.thumbnail_url.presence || 'https://via.placeholder.com/800x450?text=No+Image' %>"
                   class="card-img-top h-100 w-100" style="object-fit: cover;" alt="<%= course.title %>">
             <% end %>
             <span class="badge bg-primary position-absolute top-0 start-0 m-2 shadow-sm">
               <%= course.category&.name || "General" %>
             </span>
          </div>

          <div class="card-body d-flex flex-column">
            <h5 class="card-title text-truncate">
              <%= link_to course.title, course_path(course), class: "text-decoration-none text-dark stretched-link" %>
            </h5>
            <p class="card-text text-muted small flex-grow-1">
              <%= truncate(course.description, length: 80) %>
            </p>

            <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top">
              <small class="text-muted">
                <i class="bi bi-book"></i> <%= course.course_modules.count %> Chương
              </small>
              <small class="text-success fw-bold">Miễn phí</small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  .course-card-hover { transition: transform 0.2s; }
  .course-card-hover:hover { transform: translateY(-5px); }
</style>
