<h2 class="mb-4">Danh sách khóa học</h2>

<div class="row">
  <% @courses.each do |course| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100 shadow-sm">
        <% if course.thumbnail_url.present? %>
          <img src="<%= course.thumbnail_url %>" class="card-img-top" alt="<%= course.title %>">
        <% else %>
          <img src="https://via.placeholder.com/400x200?text=No+Image" class="card-img-top" alt="no image">
        <% end %>

        <div class="card-body">
          <h5 class="card-title"><%= course.title %></h5>
          <p class="card-text text-truncate"><%= course.description %></p>
          <p><strong>Danh mục:</strong> <%= course.category&.name || "Chưa phân loại" %></p>

          <%= link_to "Xem chi tiết", course_path(course), class: "btn btn-outline-primary btn-sm" %>

          <% if current_user.admin? %>
            <%= link_to "Sửa", edit_course_path(course), class: "btn btn-warning btn-sm" %>
            <%= link_to "Xóa", course_path(course), method: :delete, data: { confirm: "Xóa khóa học này?" }, class: "btn btn-danger btn-sm" %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
