<%= form_with(model: course, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :thumbnail_url, class: 'form-label' %>
    <%= form.text_field :thumbnail_url, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :category_id, 'Category', class: 'form-label' %>
    <%= form.collection_select :category_id, Category.all, :id, :name, { include_blank: 'None' }, class: 'form-select' %>
  </div>

  <div class="mb-3">
    <%= form.label :created_by, 'Created By (User ID)', class: 'form-label' %>
    <%= form.number_field :created_by, class: 'form-control' %>
  </div>

  <div>
    <%= form.submit class: 'btn btn-success' %>
    <%= link_to 'Back', courses_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
