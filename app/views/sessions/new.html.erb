<div class="row justify-content-center mt-5">
  <div class="col-md-4">
    <div class="card shadow">
      <div class="card-body">
        <h3 class="text-center mb-4">Đăng nhập</h3>

        <%= form_with(url: login_path, local: true) do |f| %>
          <div class="mb-3">
            <%= f.label :email, "Email", class: "form-label" %>
            <%= f.email_field :email, class: "form-control", required: true, autofocus: true %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "Mật khẩu", class: "form-label" %>
            <%= f.password_field :password, class: "form-control", required: true %>
          </div>

          <div class="d-grid">
            <%= f.submit "Đăng nhập", class: "btn btn-primary" %>
          </div>
        <% end %>

        <hr>
        <div class="text-center">
          <small>Chưa có tài khoản? <%= link_to "Đăng ký ngay", signup_path %></small>
        </div>
      </div>
    </div>
  </div>
</div>
