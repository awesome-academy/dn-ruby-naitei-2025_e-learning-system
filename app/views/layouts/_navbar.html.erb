<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
  <div class="container">

    <%= link_to root_path, class: "navbar-brand fw-bold text-primary" do %>
      <i class="bi bi-mortarboard-fill"></i> E-Learning
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">

      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <%= link_to "Khóa học", courses_path, class: "nav-link #{'active' if current_page?(courses_path)}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Danh mục", categories_path, class: "nav-link #{'active' if current_page?(categories_path)}" %>
        </li>
      </ul>

      <ul class="navbar-nav ms-auto">
        <% if current_user %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">

              <img src="<%= current_user.avatar_url.presence || "https://ui-avatars.com/api/?name=#{current_user.name}&background=random&color=fff" %>"
                   class="rounded-circle me-2 border"
                   style="object-fit: cover;"
                   width="32" height="32">

              <span class="fw-bold"><%= current_user.name %></span>
            </a>

            <ul class="dropdown-menu dropdown-menu-end shadow">
              <% if current_user.admin? %>
                <li>
                  <%= link_to admin_courses_path, class: "dropdown-item text-danger d-flex align-items-center" do %>
                    <i class="bi bi-gear-fill me-2"></i> Quản trị
                  <% end %>
                </li>
                <li><hr class="dropdown-divider"></li>
              <% end %>

              <li>
                <%= link_to edit_profile_path, class: "dropdown-item d-flex align-items-center" do %>
                  <i class="bi bi-person-circle me-2"></i> Hồ sơ cá nhân
                <% end %>
              </li>

              <li>
                <%= link_to password_edit_path, class: "dropdown-item d-flex align-items-center" do %>
                  <i class="bi bi-key-fill me-2"></i> Đổi mật khẩu
                <% end %>
              </li>

              <li><hr class="dropdown-divider"></li>

              <li>
                <%= button_to logout_path, method: :delete, class: "dropdown-item text-danger d-flex align-items-center w-100" do %>
                  <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item me-2">
            <%= link_to "Đăng nhập", login_path, class: "btn btn-outline-primary" %>
          </li>
          <li class="nav-item">
            <%= link_to "Đăng ký", signup_path, class: "btn btn-primary" %>
          </li>
        <% end %>
      </ul>

    </div>
  </div>
</nav>
