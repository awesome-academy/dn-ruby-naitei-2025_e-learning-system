<div class="container mt-4">
  <h2 class="mb-3">Categories</h2>

  <%= link_to 'New Category', new_category_path, class: 'btn btn-primary mb-3' %>

  <table class="table table-bordered table-hover">
    <thead class="table-light">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Parent</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= truncate(category.description, length: 60) %></td>
          <td><%= category.parent&.name || 'â€”' %></td>
          <td>
            <%= link_to 'View', category_path(category), class: 'btn btn-sm btn-info' %>
            <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-sm btn-warning' %>
            <%= link_to 'Delete', category, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
