<%= form_with(model: category, local: true, class: 'needs-validation') do |form| %>
  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :parent_id, 'Parent Category', class: 'form-label' %>
    <%= form.collection_select :parent_id, Category.all, :id, :name, { include_blank: 'None' }, class: 'form-select' %>
  </div>

  <div>
    <%= form.submit class: 'btn btn-success' %>
    <%= link_to 'Back', categories_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
